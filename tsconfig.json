{
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"baseUrl": ".",
		"declaration": true,
		"experimentalDecorators": true,
		"inlineSourceMap": false,
		"jsx": "preserve",
		"lib": ["DOM", "ESNext"],
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "es6"
	},
	"exclude": [
		"demo",
		"dist",
		"coverage",
		"node_modules",
		"**/__test__/*",
		"**/*.test.tsx",
		"**/*.test.ts"
	]
}
