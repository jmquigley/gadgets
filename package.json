{
		"name": "gadgets",
		"version": "0.0.8",
		"author": "jmquigley <jmquigley@outlook.com>",
		"description": "Reusable React UI widgets - This is my widget library. There are many like it, but this one is mine...",
		"private": false,
		"license": "MIT",
		"repository": {
				"type": "git",
				"url": "https://github.com/jmquigley/gadgets"
		},
		"bugs": {
				"url": "https://github.com/jmquigley/gadgets/issues"
		},
		"engines": {
				"node": ">=7.5"
		},
		"main": "./dist/bundle.js",
		"types": "./index.d.ts",
		"scripts": {
				"all": "yarn install && yarn run clean && yarn run lint && yarn run build && yarn run build:demo && yarn run docs && yarn run test",
				"build": "webpack",
				"build:demo": "cd demo && yarn run build",
				"clean": "pkgwrap --clean",
				"coverage": "pkgwrap --coverage --jest",
				"demo": "yarn run all && yarn start",
				"docs": "pkgwrap --docs",
				"lint": "pkgwrap --lint",
				"start": "electron demo/.",
				"test": "pkgwrap --testing --jest",
				"watch": "webpack --watch --progress",
				"webpack": "webpack"
		},
		"dependencies": {
				"util.join": "^0.0.12",
				"util.pkgwrap": ">=0.0.67"
		},
		"devDependencies": {
				"@types/enzyme": "^2.8.2",
				"@types/fs-extra": "^3.0.3",
				"@types/jest": "^20.0.2",
				"@types/jquery": "^3.2.7",
				"@types/lodash": "^4.14.68",
				"@types/lorem-ipsum": "^1.0.2",
				"@types/node": "^8.0.10",
				"@types/react": "^15.0.37",
				"@types/react-dom": "^15.5.1",
				"@types/sinon": "^2.3.2",
				"awesome-typescript-loader": "^3.2.1",
				"babel-cli": "^6.24.1",
				"babel-plugin-css-modules-transform": "^1.2.7",
				"babel-preset-babili": "0.1.4",
				"babel-preset-es2016": "^6.24.1",
				"babel-preset-es2017": "^6.24.1",
				"babel-preset-react": "^6.24.1",
				"babili-webpack-plugin": "0.1.2",
				"coveralls": "^2.13.1",
				"css-loader": "^0.28.4",
				"css-ripple-effect": "^1.0.5",
				"electron": "^1.6.11",
				"enzyme": "^2.9.1",
				"extract-text-webpack-plugin": "^3.0.0",
				"file-loader": "^0.11.2",
				"font-awesome": "^4.7.0",
				"identity-obj-proxy": "^3.0.0",
				"jest": "^20.0.4",
				"jest-serializer-enzyme": "^1.0.0",
				"jquery": "^3.2.1",
				"js-output-loader": ">=0.0.5",
				"lodash": "^4.17.4",
				"lorem-ipsum": "^1.0.4",
				"postcss-cssnext": "^3.0.2",
				"postcss-import": "^10.0.0",
				"postcss-loader": "^2.0.6",
				"postcss-modules": "^0.8.0",
				"precss": "^2.0.0",
				"process-nextick-args": "^1.0.7",
				"react": "^15.6.1",
				"react-addons-test-utils": "^15.6.0",
				"react-dom": "^15.6.1",
				"react-select": "^1.0.0-rc.5",
				"react-test-renderer": "^15.6.1",
				"style-loader": "^0.18.2",
				"tslint": "^5.5.0",
				"tslint-react": "^3.0.0",
				"typescript": "^2.4.1",
				"typescript-babel-jest": "^1.0.4",
				"url-loader": "^0.5.9",
				"util.toolbox": "0.0.39",
				"util.wait": "0.0.26",
				"webpack": "^3.2.0",
				"webpack-bundle-analyzer": "^2.8.2"
		},
		"babel": {
				"presets": [
						"es2016",
						"es2017",
						"react"
				]
		},
		"pkgwrap": {
				"cleanup": [
						"docs"
				]
		},
		"jest": {
				"collectCoverage": true,
				"moduleFileExtensions": [
						"js",
						"jsx",
						"json",
						"ts",
						"tsx"
				],
				"moduleNameMapper": {
						"\\.(css)$": "identity-obj-proxy"
				},
				"notify": true,
				"snapshotSerializers": [
						"<rootDir>/node_modules/jest-serializer-enzyme"
				],
				"testRegex": "__test__/.*\\.test\\.(ts|tsx)$",
				"transform": {
						"^.+\\.(ts|tsx)$": "typescript-babel-jest"
				},
				"verbose": false
		}
}
